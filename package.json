{
  "name": "website-monitor",
  "version": "1.0.0",
  "description": "Monitors list of websites to detect downtime using cron jobs.",
  "main": "build/index",
  "types": "dist/index",
  "scripts": {
    "test": "npm run build && jest --testTimeout=5000 --detectOpenHandles --forceExit",
    "test:watch": "npm run build && jest --watch --testTimeout=5000 --detectOpenHandles --forceExit --verbose",
    "test:verbose": "npm run build && jest --testTimeout=5000 --detectOpenHandles --forceExit --verbose",
    "start": "npm run build && node ./build/index.js",
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "build": "rimraf ./build && tsc",
    "swagger-autogen": "node ./src/swagger/swagger.ts"
  },
  "author": "Isaac Hunter",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@types/mongodb": "^4.0.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fetch": "^1.1.0",
    "fs": "^0.0.1-security",
    "lodash": "^4.17.21",
    "mongodb": "^5.0.0",
    "mongoose": "^7.3.4",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "request": "^2.88.2",
    "rimraff": "^0.0.1-security",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.2",
    "@types/node-cron": "^3.0.9",
    "@types/request": "^2.48.9",
    "@types/supertest": "^2.0.14",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/parser": "^6.7.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
